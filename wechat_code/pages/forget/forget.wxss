.forgot-container {
min-height
:100vh;
width
:100%;
padding
:160rpx 44rpx 244rpx 44rpx;
background
:url(http://clfile.zggen.cn/20231123/c6d484065a734fe1846d30e79a9f9574.jpg) no-repeat center top / 100% 100%;
height
:100%;
}

.forgot-content {
max-width: calc(100% - 23%);
overflow: hidden;
padding
:100rpx 48rpx 40rpx 48rpx;
box-shadow
:0px 0px 0px #dddddd;
border-radius
:24rpx;
background
:none;
display
:block;
width
:100%;
position
:relative;
height
:auto;
}
.box{
width: 90%!important;
    width
:100%;
    margin
:0 0 24rpx 0;
    height
:auto;
}
input{
border
:2rpx solid #00000010;
padding
:0px 24rpx 0 24rpx;
margin
:0 0 0 0;
color
:#999999;
border-radius
:40rpx;
background
:#00000040;
width
:100%;
font-size
:28rpx;
height
:80rpx;
}



.next-btn {
    border
:0px solid #eee;
    padding
:0 0 0 0;
    margin
:0 0 24rpx 0;
    color
:#ffffff;
    border-radius
:60rpx;
    background
:#3da742;
    width
:100%;
    line-height
:80rpx;
    font-size
:32rpx;
    height
:80rpx;
}

